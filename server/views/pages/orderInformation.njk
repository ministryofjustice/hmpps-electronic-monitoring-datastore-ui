    caption: "Order information",
    captionClasses: "govuk-table__caption--m",
    firstCellIsHeader: true,
    rows: [
      [
        {text: "Specials"},
        {text: orderInformation.specials}
      ],
      [
        {text: "Legacy Subject ID"},
        {text: orderInformation.legacySubjectId}
