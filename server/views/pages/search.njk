{% extends "../partials/layout.njk" %}


{% set pageTitle = makePageTitle({ pageHeading: page.title, hasErrors: errors }) %}

{% block content %}

  {{ emsServiceInformation() }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate id="order-search-form">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-1">{{ page.title }}</h1>
        <span class="govuk-caption-l  govuk-!-margin-bottom-5">You can search by subject ID, name, date of birth and alias</span>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

        {{ govukRadios({
          classes: "govuk-radios--small",
          name: "searchType",
          fieldset: {
            legend: {
              text: "What data are you searching for?",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "integrity",
              text: "Integrity data only"
            },
            {
              value: "am",
              text: "Alcohol monitoring data only"
            }
          ],
          errorMessage: {
            text: "Select the type of data to search for"
          }
        }) }}

        {{ govukInput({
          label: {
            text: "Subject ID",
            classes: "govuk-label--m"
          },
          id: "subject-id",
          name: "subjectId",
          value: "form-data.subjectId"
        }) }}

        {{ govukInput({
          label: {
            text: "First name"
          },
          classes: "govuk-!-width-two-thirds",
          id: "first-name",
          name: "firstName",
          value: "form-data.firstName"
        }) }}

        {{ govukInput({
          label: {
            text: "Last name"
          },
          classes: "govuk-!-width-two-thirds",
          id: "last-name",
          name: "lastName",
          value: "form-data.lastName"
        }) }}

        {{ govukDateInput({
          id: "dob",
          namePrefix: "dob",
          fieldset: {
            legend: {
              text: "Date of birth",
              isPageHeading: false
            }
          },
          hint: {
            text: "For example, 01 02 1990"
          },
          items: dateTimeItems("dob", formData)
          }) }}
        
        {{ govukInput({
          label: {
            text: "Alias"
          },
          classes: "govuk-!-width-two-thirds",
          id: "alias",
          name: "alias",
          value: "form-data.alias"
        }) }}

        {{ govukButton({
          text: "Search",
          classes: "ems-search-form__button--submit"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}