{% extends "../partials/layout-default.njk" %}

{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% set heading = page.title %}
{% set pageTitle = page.title %}
{% set backUrl = "/" %}

{% block innerContent %}
  {{ errorSummary | dump }}

  {% if errorSummary %}
    {% set errorList = [] %}
    {% for entry in errorSummary.errorList %}
    {% set errorList = (errorList.push({
      text: entry.error,
      href: "#" + entry.field
    }), errorList) %}
    {% endfor %}
    {{ govukErrorSummary({
      titleText: errorSummary.title,
      errorList: errorList
    }) }}
  {% endif %}

  <form action="" method="post" {{ formEncoding }} novalidate>
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    <span class="govuk-caption-l govuk-!-margin-bottom-5">You can search by subject ID, name, date of birth and alias</span>

    {# TODO: Remove environment flag when AM is ready for deployment to preprod & prod #}
    {% if (environmentName | upper == 'DEV' ) %}
      {{ govukRadios({
        classes: "govuk-radios--small",
        name: "searchType",
        fieldset: {
          legend: {
            text: "What data are you searching for?",
            isPageHeading: false,
            classes: "govuk-fieldset__legend--m"
          }
        },
        items: [
          {
            value: "integrity",
            text: "Integrity data only",
            checked: true
          },
          {
            value: "alcohol-monitoring",
            text: "Alcohol monitoring data only"
          }
        ]
      }) }}
    {% endif %}

    {{ govukInput({
      label: {
        text: "Legacy subject id",
        classes: "govuk-label--s"
      },
      classes: "govuk-!-width-two-thirds",
      id: "legacy-subject-id",
      name: "legacySubjectId",
      value: legacySubjectId.value,
      errorMessage: legacySubjectId.error
    }) }}

    {{ govukInput({
      label: {
        text: "First name",
        classes: "govuk-label--s"
      },
      classes: "govuk-!-width-two-thirds",
      id: "first-name",
      name: "firstName",
      value: firstName.value,
      errorMessage: firstName.error
    }) }}

    {{ govukInput({
      label: {
        text: "Last name",
        classes: "govuk-label--s"
      },
      classes: "govuk-!-width-two-thirds",
      id: "last-name",
      name: "lastName",
      value: lastName.value,
      errorMessage: lastName.error
    }) }}

    {{ govukDateInput({
      id: "dob",
      fieldset: {
        legend: {
          text: "Date of birth",
          isPageHeading: false,
          classes: "govuk-fieldset__legend--s",
          errorMessage: dob.error
        }
      },
      hint: {
        text: "For example, 01 02 1990"
      },

      items: [
        {
          id: "dob-day",
          name: "Day",
          classes: "govuk-input--width-2",
          value: dob.value.day,
          attributes: disabled
        },
        {
          id: "dob-month",
          name: "Month",
          classes: "govuk-input--width-2",
          value: dob.value.month,
          attributes: disabled
        },
        {
          id: "dob-year",
          name: "Year",
          classes: "govuk-input--width-4",
          value: dob.value.year,
          attributes: disabled
        }
      ],
      errorMessage: dob.error
    }) }}

    {{ govukInput({
      label: {
        text: "Alias",
        classes: "govuk-label--s"
      },
      classes: "govuk-!-width-two-thirds",
      id: "alias",
      name: "alias",
      value: alias.value,
      errorMessage: alias.error
    }) }}

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Search",
        classes: "ems-search-form__button--submit"
      }) }}
    </div>
  </form>
{% endblock %}
