{% extends "../partials/layout.njk" %}


{% set pageTitle = applicationName + " - Search for case details" %}
{% set mainClasses = "app-container govuk-body" %}

{% set mockValidationData = {
  subjectId: {
    value: "123456",
    errorMessage: null
  },
  firstName: {
    value: null,
    errorMessage: null
  },
  lastName: {
    value: null,
    errorMessage: null
  },
  dateOfBirth: {
    errorMessage: "Enter a day.",
    day: {
      value: null,
      error: true
    },
    month: {
      value: "12",
      error: false
    },
    year: {
      value: "3000",
      error: false
    }
  },
  alias: {
    value: null,
    errorMessage: null
  }
} %}

{% block content %}

  {{ emsServiceInformation() }}
{# 
  <h1>Search for case details</h1>
  
  <p>You can search by subject ID, name, date of birth and alias</p> #}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l govuk-!-margin-bottom-1">Search for case details</h1>
      <span class="govuk-caption-l  govuk-!-margin-bottom-5">You can search by subject ID, name, date of birth and alias</span>
      <form method="post" novalidate>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

        {{ govukRadios({
          classes: "govuk-radios--small",
          name: "searchType",
          fieldset: {
            legend: {
              text: "What data are you searching for?",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "integrity",
              text: "Integrity data only"
            },
            {
              value: "am",
              text: "Alcohol monitoring data only"
            }
          ],
          errorMessage: {
            text: "Select the type of data to search for"
          }
        }) }}

        {{ govukInput({
          label: {
            text: "Subject ID",
            classes: "govuk-label--m"
          },
          id: "subject-id",
          name: "subjectId"
        }) }}

        {{ govukInput({
          label: {
            text: "First Name"
          },
          classes: "govuk-!-width-two-thirds",
          id: "first-name",
          name: "firstName"
        }) }}

        {{ govukInput({
          label: {
            text: "Last Name"
          },
          classes: "govuk-!-width-two-thirds",
          id: "last-name",
          name: "lastName"
        }) }}

        {{ govukDateInput({
          id: "dob",
          namePrefix: "dob",
          fieldset: {
            legend: {
              text: "Date of birth",
              isPageHeading: false
            }
          },
          hint: {
            text: "For example, 31 3 2023"
          }
        }) }}
        
        {{ govukInput({
          label: {
            text: "Alias"
          },
          classes: "govuk-!-width-two-thirds",
          id: "alias",
          name: "alias"
        }) }}
