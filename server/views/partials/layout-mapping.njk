{% extends "../partials/layout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "../components/emsServiceInformation.njk" import emsServiceInformation %}


{% block head %}
  <link href="/assets/leaflet.css" rel="stylesheet" />
  <link href="{{ '/assets/css/app.css' | assetMap }}" rel="stylesheet"/>
{% endblock %}

{% block beforeContent %}
  {% if backUrl %}
    {{ govukBackLink({
      text: (backText if backText or "back"),
      href: backUrl
    }) }}
  {% endif %}
{% endblock %}

{% block content %}
  {{ emsServiceInformation() }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <h1 class="govuk-heading-l">{{ heading }}</h1>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <div id="map"></div>

      {% block innerContent %}{% endblock %}
    </div>
    <div id="sidebar" class="govuk-grid-column-one-quarter">
      {% block asideContent %}{% endblock %}
    </div>
  </div>
{% endblock %}

{% block bodyEnd %}
  <script src="/assets/leaflet.js"></script>
  <script type="module" src="{{ '/assets/js/app.js' | assetMap }}"></script>
{% endblock %}
