{
  "name": "hmpps-electronic-monitoring-datastore-ui",
  "version": "0.0.1",
  "description": "HMPPS Electronic Monitoring Datastore Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-electronic-monitoring-datastore-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "DOTENV_CONFIG_PATH=feature.env node $NODE_DEBUG_OPTION -r dotenv/config dist/server.js | bunyan -o short",
    "start-feature:dev": "DOTENV_CONFIG_PATH=feature.env concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:clearCache": "jest --clearCache",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "npx cypress run --config video=false",
    "int-test-ui": "npx cypress open --e2e --browser chrome",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^20",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.775.0",
    "@ministryofjustice/frontend": "^4.0.1",
    "@x-govuk/govuk-prototype-filters": "^1.5.0",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^3.6.0",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^8.0.2",
    "csrf-sync": "^4.1.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.9.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.0",
    "superagent": "^10.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.28",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "axe-core": "^4.10.3",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cypress": "^14.2.1",
    "cypress-axe": "^1.6.0",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.1",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.5",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.2.5",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.5.0",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.0.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2"
  },
  "overrides": {
    "aws-sdk-client-mock": {
      "sinon": "^19.0.5",
      "@types/sinon": "^17.0.4"
    }
  }
}
